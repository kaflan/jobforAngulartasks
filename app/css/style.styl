@import "variable/*"
@import "icon/*"
@import 'axis'
@import 'jeet'
@import 'rupture'

border-box-html()
fluid-media() //care flex box image
rupture.scale = 0 400px 600px 780px 960px 1300px
rupture.scale-names = 'xs' 'sm' 'm' 'l' 'xl' 'hd'
jeet.gutter = 1

wraper
	center(1200px)

body
	font-family 'Open Sans'
	padding 40px
	background #E9E7E7
//default
.admin-link
	color: blue;
	text-decoration: underline;
	font-size: 12px;
	margin-right: 30px;
	
h1
	margin-top 0

h3
	margin-bottom 20px

h4
	font-weight 600
.m20_0
	margin 20px 0


.m10_0
	margin 10px 0

.main-cont
	center(1200px)
	background: white;
	padding: 20px;
	border-radius: 10px;
	
.admin-left
	col(1/4)
.admin-right
	col(3/4)
	padding 0 30px

.line-left
	display flex
	align-items center
	justify-content flex-start
.line-right
	display flex
	align-items center
	justify-content flex-end
.label-info
	margin-right 30px
	

.line-right
	.btn
		margin-left 10px

.line-left
	.btn
		margin-right 10px
		
.section
	margin 30px 0px
	padding 30px 20px
	border 1px solid #E9E7E7
	border-radius 10px

.form-horizontal .control-label
	text-align left
	
.border-form
	border 2px solid grey
	padding 20px
	border-radius 10px
	margin-bottom 20px

.weekdays
	margin-left 20px
	margin-top 10px
	
.progres-color-info-good,
.progres-color-info-time,
.progres-color-info-bad
	width 40px
	height 30px
	margin-right 20px
	margin-left 20px
.progres-color-info-good
	background #5cb85c
.progres-color-info-time
	background #f0ad4e
.progres-color-info-bad
	background red

.progres-color-info-items
	flex(mid)
	justify-content flex-start
	margin-bottom 20px
	
.input-number
	width 60px
	padding 5px
	border-radius 5px
	border 1px solid #D5D5D5
	
.small-thead
	font-size 12px !important

.History-audit
	table
		tr
			td
				&:nth-child(5)
					width 5%
					
.Check-lists
	table
		tr
			td
				&:nth-child(2)
					width 30%
					
label
	font-size 12px

span.label
	font-size 100%